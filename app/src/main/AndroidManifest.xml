<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.remote.salon.urban">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".ui.activities.IntroActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        >
    </activity>
    <activity
        android:name=".ui.activities.SalonLogin"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.activities.AddSearvicActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
    </activity>
    <activity
        android:name=".ui.activities.CustomerLoginActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
    </activity>
    <activity
        android:name=".ui.activities.SalonDashBoard"
        android:label="@string/title_activity_salon_dash_board"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.activities.RegisterSalonActivity"
        android:launchMode="singleInstance"
        android:taskAffinity=""
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.activities.CustomerRegisterActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
    </activity>
    <activity
        android:name=".ui.activities.SalonDetailsActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.activities.MainDashBoadActivity"
        android:label="@string/title_activity_main_dash_boad_activyity"
        android:launchMode="singleTask"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.activities.Splash"
       android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

</manifest>